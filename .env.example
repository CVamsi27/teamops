# Copy this file to .env.local and fill in your values

# ======================
# DATABASE (Neon - Free)
# ======================
# Get from: https://neon.tech -> Your Project -> Connection String
DATABASE_URL="postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb"

# ======================
# REDIS CACHE (Upstash - Free)
# ======================
# Get from: https://upstash.com -> Redis -> Your Database -> Details
UPSTASH_REDIS_REST_URL="https://region.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token-here"

# Alternative: Vercel KV (if using Vercel KV instead)
# KV_REST_API_URL="your-vercel-kv-url"
# KV_REST_API_TOKEN="your-vercel-kv-token"

# ======================
# MESSAGE QUEUE (Upstash Kafka - Free)
# ======================
# Get from: https://upstash.com -> Kafka -> Your Cluster -> Details
UPSTASH_KAFKA_REST_URL="https://region.upstash.io"
UPSTASH_KAFKA_REST_TOKEN="your-token-here"
# These are typically automatically provided by Upstash
UPSTASH_KAFKA_REST_USERNAME="your-username-if-needed"
UPSTASH_KAFKA_REST_PASSWORD="your-password-if-needed"

# ======================
# AUTHENTICATION
# ======================
# Generate a secure random string (at least 32 characters)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-minimum-32-chars"

# Token expiration time (24h, 7d, 30d, etc.)
JWT_EXPIRES_IN="24h"

# ======================
# GOOGLE CALENDAR INTEGRATION
# ======================
# Get from: https://console.cloud.google.com -> APIs & Services -> Credentials
GOOGLE_CALENDAR_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CALENDAR_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALENDAR_REDIRECT_URI="http://localhost:3000/integrations/google-calendar/callback"

# ======================
# APPLICATION URLs
# ======================
# Frontend (Next.js) points to backend API
NEXT_PUBLIC_API_URL="http://localhost:3001/api"
BACKEND_URL="http://localhost:3001"

# For production (update after deployment)
# NEXT_PUBLIC_API_URL="https://your-api.railway.app/api"
# BACKEND_URL="https://your-api.railway.app"

# ======================
# OPTIONAL: EMAIL (for notifications)
# ======================
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# ======================
# OPTIONAL: FILE UPLOADS
# ======================
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# ======================
# ENVIRONMENT
# ======================
NODE_ENV=development