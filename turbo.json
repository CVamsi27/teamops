{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "JWT_SECRET",
    "JWT_EXPIRES_IN",
    "APP_ENV",
    "NODE_ENV",
    "PORT",
    "FRONTEND_URL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "GOOGLE_CALLBACK_URL",
    "GOOGLE_CALENDAR_REDIRECT_URI",
    "NEXT_PUBLIC_API_URL",
    "SMTP_HOST",
    "SMTP_PORT",
    "SMTP_USER",
    "SMTP_PASS",
    "SMTP_FROM_EMAIL",
    "SMTP_FROM_NAME",
    "KAFKA_ENABLED",
    "KAFKA_BROKERS",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "UPSTASH_KAFKA_REST_URL",
    "UPSTASH_KAFKA_REST_USERNAME",
    "UPSTASH_KAFKA_REST_PASSWORD",
    "KV_REST_API_URL",
    "KV_REST_API_TOKEN",
    "POSTGRES_URL",
    "DATABASE_URL",
    "BLOB_READ_WRITE_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
