{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "dotenv -e .env -- turbo build",
    "dev": "dotenv -e .env -- turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy:free": "./scripts/deploy-free.sh",
    "deploy:vercel": "cd apps/web && vercel --prod",
    "deploy:railway": "railway up",
    "deploy:help": "cat docs/DEPLOYMENT_STEPS.md",
    "deploy:guide": "./scripts/deployment-help.sh",
    "setup:upstash": "echo 'Please visit https://upstash.com to set up Redis and Kafka'",
    "setup:neon": "echo 'Please visit https://neon.tech to set up PostgreSQL'",
    "setup:all": "echo 'Follow DEPLOYMENT_STEPS.md for complete setup guide'",
    "test:health": "curl http://localhost:3001/api/health",
    "test:backend": "curl http://localhost:3001/api/auth/profile",
    "prisma:generate": "cd apps/api && npx prisma generate",
    "prisma:migrate": "cd apps/api && npx prisma migrate dev",
    "prisma:studio": "cd apps/api && npx prisma studio"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "dotenv-cli": "^10.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "prisma": "^6.16.1"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@tailwindcss/oxide",
      "core-js-pure",
      "prisma",
      "sharp"
    ]
  }
}
